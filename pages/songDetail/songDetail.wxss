.songDetailContainer{
  height: 100vh;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 底座 */
.circle {
  position: relative;
  z-index: 100;
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: #fff;
  margin: 10rpx 0;
}

/* 摇杆 */
.needle{
  position: relative;
  z-index: 99;
  top: -40rpx;
  left: 60rpx;
  width: 192rpx;
  height: 274rpx;
  transform: rotate(-25deg);
  transform-origin: 40rpx 0;
  transition: transform 0.8s;
}

.needleRotate{
  transform: rotate(0);
}

/* 磁盘 */
.discContainer {
  position: relative;
  top: -170rpx;
  width: 598rpx;
  height: 598rpx;
}

.discAnimation{
  animation: disc 5.5s linear infinite;
  animation-delay: 0.8s;
}

@keyframes disc {
  from {
    transform: rotate(0);
  }
  to {
    transform: rotate(360deg);
  }
}

.disc {
  width: 100%;
  height: 100%;
}

.musicImg {
  position: absolute;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  margin: auto;
  width: 370rpx;
  height: 370rpx;
  border-radius: 50%;
}

/* 底部控制区域 */
.musicControl{
  width: 100%;
  display: flex;
  position: absolute;
  bottom: 40rpx;
  left: 0;
  border-top: 1rpx solid #fff;
}

.musicControl text{
  width: 20%;
  height: 120rpx;
  line-height: 120rpx;
  text-align: center;
  color: #fff;
  font-size: 48rpx;
}

.musicControl .big{
  font-size: 70rpx;
}